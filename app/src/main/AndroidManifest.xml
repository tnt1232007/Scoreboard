<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tnt.scoreboard">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/BaseTheme">
        <activity
            android:name=".GameListActivity"
            android:label="@string/title_activity_games"
            android:theme="@style/GameListTheme">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".GameNewActivity"
            android:label="@string/title_activity_game_new"
            android:parentActivityName=".GameListActivity"
            android:theme="@style/GameNewTheme"/>
        <activity
            android:name=".GameScoreActivity"
            android:label="@string/title_activity_score"
            android:parentActivityName=".GameListActivity"
            android:theme="@style/GameScoreTheme">
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/SettingTheme">
        </activity>
    </application>

</manifest>
