<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:contentDescription="@string/default_image"
                android:src="@drawable/ic_1_cup" />

            <TextView
                android:id="@+id/player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="First" />

            <TextView
                android:id="@+id/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="120" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/divider"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@+id/layout1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/default_image"
                android:src="@drawable/ic_2_cup" />

            <TextView
                android:id="@+id/player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="Second" />

            <TextView
                android:id="@+id/score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="96" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/divider"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/layout1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="58dp"
                android:contentDescription="@string/default_image"
                android:src="@drawable/ic_3_cup" />

            <TextView
                android:id="@+id/player3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="Third" />

            <TextView
                android:id="@+id/score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="84" />
        </LinearLayout>

        <include
            android:id="@+id/divider"
            layout="@layout/divider_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="220dp"
            android:visibility="invisible"
            tools:visibility="visible" />

        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/divider"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:contentDescription="@string/default_image"
                android:src="@drawable/ic_4" />

            <TextView
                android:id="@+id/player4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16sp"
                tools:text="Fourth Player" />

            <TextView
                android:id="@+id/score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/player4"
                android:layout_below="@+id/player4"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                tools:text="48" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout4"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:contentDescription="@string/default_image"
                android:src="@drawable/ic_5" />

            <TextView
                android:id="@+id/player5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16sp"
                tools:text="Fifth Player" />

            <TextView
                android:id="@+id/score5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/player5"
                android:layout_below="@+id/player5"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                tools:text="48" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout5"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:contentDescription="@string/default_image"
                android:src="@drawable/ic_6" />

            <TextView
                android:id="@+id/player6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16sp"
                tools:text="Sixth Player" />

            <TextView
                android:id="@+id/score6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/player6"
                android:layout_below="@+id/player6"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                tools:text="48" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout6"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:contentDescription="@string/default_image"
                android:src="@drawable/ic_7" />

            <TextView
                android:id="@+id/player7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16sp"
                tools:text="Seventh Player" />

            <TextView
                android:id="@+id/score7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/player7"
                android:layout_below="@+id/player7"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                tools:text="48" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout7"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:contentDescription="@string/default_image"
                android:src="@drawable/ic_8" />

            <TextView
                android:id="@+id/player8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16sp"
                tools:text="Eighth Player" />

            <TextView
                android:id="@+id/score8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/player8"
                android:layout_below="@+id/player8"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                tools:text="48" />
        </RelativeLayout>

        <Button
            android:id="@+id/viewAll"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:gravity="center"
            android:text="@string/view_all" />
    </RelativeLayout>
</ScrollView>