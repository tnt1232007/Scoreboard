<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_general">
        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_value_default_name"
            android:inputType="textCapWords"
            android:key="default_name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_default_name"/>
        <ListPreference
            android:defaultValue="@string/pref_value_theme"
            android:entries="@array/pref_entries_theme"
            android:entryValues="@array/pref_values_theme"
            android:key="theme"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_theme"/>
    </PreferenceCategory>
</PreferenceScreen>
