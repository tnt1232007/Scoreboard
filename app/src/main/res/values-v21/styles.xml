<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="closeButtonIcon" format="reference" />

    <style name="BaseLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionModeBackground">@color/grayDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="colorControlSelected">@color/dimWhite</item>
        <item name="closeButtonIcon">@drawable/ic_close_light</item>
        <item name="colorPrimary">@color/grayDark</item>
        <item name="colorPrimaryDark">@color/lightBlack</item>
        <item name="colorAccent">@color/blueAccent</item>
    </style>

    <style name="GameNewLightTheme" parent="BaseLightTheme">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/redDark</item>
    </style>

    <style name="GameScoreLightTheme" parent="BaseLightTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
    </style>

    <style name="GameHistoryLightTheme" parent="BaseLightTheme">
        <item name="colorPrimary">@color/deepPurple</item>
        <item name="colorPrimaryDark">@color/deepPurpleDark</item>
    </style>


    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="actionModeBackground">@color/grayDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorControlSelected">@color/lightBlack</item>
        <item name="closeButtonIcon">@drawable/ic_close_dark</item>
        <item name="colorPrimary">@color/grayDark</item>
        <item name="colorPrimaryDark">@color/lightBlack</item>
        <item name="colorAccent">@color/blueAccent</item>
    </style>

    <style name="GameNewTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/redDark</item>
    </style>

    <style name="GameScoreTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
    </style>

    <style name="GameHistoryTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/deepPurple</item>
        <item name="colorPrimaryDark">@color/deepPurpleDark</item>
    </style>


    <style name="MyFloatingMenu">
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
</resources>
